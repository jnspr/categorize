{
  "name": "categorize",
  "displayName": "Categorize",
  "description": "De-clutter your explorer",
  "repository": {
    "type": "github",
    "url": "https://github.com/jnspr/categorize"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "categorize.pickCategory",
        "title": "Pick category",
        "category": "Categorize"
      },
      {
        "command": "categorize.forceRefresh",
        "title": "Force refresh",
        "category": "Categorize"
      }
    ],
    "configuration": {
      "title": "categorize",
      "properties": {
        "categorize.currentCategory": {
          "type": [
            "string",
            "null"
          ],
          "description": "Currently active category",
          "default": null
        },
        "categorize.excludeAlways": {
          "type": "object",
          "description": "Files that are excluded by default",
          "default": {
            "**/.git": true,
            "**/.svn": true,
            "**/.hg": true,
            "**/CVS": true,
            "**/.DS_Store": true,
            "**/Thumbs.db": true
          }
        },
        "categorize.categories": {
          "type": "object",
          "description": "Map of available categories",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "label": {
                "type": [
                  "string",
                  "null"
                ],
                "default": "My label",
                "description": "Title of a category"
              },
              "patterns": {
                "type": "array",
                "description": "An array of `files.exclude` patterns to activate",
                "additionalItems": {
                  "type": "string"
                }
              },
              "detail": {
                "type": [
                  "string",
                  "null"
                ],
                "default": null,
                "description": "Subtext of a category"
              },
              "iconName": {
                "type": [
                  "string",
                  "null"
                ],
                "default": null,
                "description": "Name of the icon of a category"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vsix": "vsce package",
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "vsce": "^2.15.0"
  }
}
